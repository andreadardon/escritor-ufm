<!DOCTYPE html>
<html>
<head>
<style media="screen" type="text/css">

h2 {margin-top: 50px;}

</style>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="register">
        <h2>Inicia Sesión</h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
<div class="row">
  <div class="col-md-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :correo_electrónico %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Ingresa tu correo electrónico" %>
      </div>
      <div class="form-group">
        <%= f.label :contraseña %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Ingresa tu contraseña" %>
      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: 'checkbox' do %>
            <%= f.check_box :remember_me %> Remember me
          <% end %>
        <% end %>
        <%= f.submit "Inicia Sesión", class: 'btn btn-success' %>
      </div>
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
</div>
