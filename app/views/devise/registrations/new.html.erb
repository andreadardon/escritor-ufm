<!DOCTYPE html>
<html>
<head>
<style media="screen" type="text/css">



</style>

</head>


<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="register">
        <h2>Regístrate</h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :nombre %>
      <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Ingresa tu nombre" %>
    </div>
    <div class="form-group">
      <%= f.label :correo_electrónico %>
      <%= f.email_field :email, class: 'form-control', placeholder: "Ingresa tu correo electrónico" %>
    </div>
    <div class="form-group">
      <%= f.label :contraseña %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Ingresa tu contraseña" %>
    </div>
    <div class="form-group">
      <%= f.label :confirmación_de_contraseña %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirma tu contraseña" %>
    </div>
    <div class="form-group">
      <%= f.submit "Regístrate", class: 'btn btn-success' %>
    </div>
    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>
        <% end %>
  </div>
</div>

